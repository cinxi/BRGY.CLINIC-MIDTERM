<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Profile</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
    <link rel="stylesheet" href="/css/patient/profile.css"> 

<body>
    <!-- Header -->
    <div class="header">
        <div class="user-account">
            <div class="user-profile">
                <!-- <img src="/image/profile-img.png" alt="profile-img"> -->
                <!-- <div class="user-detail">
                    <h3>Olivia Rodrigo</h3>
                    <span>Patient</span>
                </div> -->
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/brgy-logo.png" alt="logo">
            <h3>Brgy. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <div class="menu-separator"></div>
            <li><a href="profile"><span class="material-symbols-outlined"> manage_accounts </span>Profile</a></li>
            <li><a href="appointment"><span class="material-symbols-outlined"> edit_calendar </span>Appointment</a></li>
            <li><a href="history"><span class="material-symbols-outlined"> save_clock </span>History</a></li>
            <li><a href="login"><span class="material-symbols-outlined"> logout </span>Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <section class="profile-section">
            <!-- <h4>Profile</h4> -->
            
            <div class="view-profile-card">
                <div class="top-profile">
                    <div class="profile-image">
                        <img src="/image/olivia-rodrigo.jpg" alt="">
                    </div>
                    <div>
                        <h4><strong>Olivia Rodrigo</strong> </h4>
                        <p>Patient</p>
                    </div>
                    <div>
                        <button class="btn btn-edit" onclick="toggleEditProfile()">
                            Edit <span class="material-symbols-outlined">edit</span>
                        </button>
                    </div>
                </div>

                <div class="info-profile">
                    <!-- <div class="form-group-row">
                        <div>
                            <label for="firstname">First Name</label>
                            <input type="text" id="firstname" name="name" value="Olivia" required>
                        </div>
                        <div class="form-group">
                            <label for="lastname">Last Name</label>
                            <input type="text" id="lastname" name="name" value="Rodrigo" required>
                        </div>
                    </div> -->
                    <div class="form-group-row">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" value="olivia@example.com" readonly>
                        </div>
                        <div class="form-group">
                            <label for="contact">Contact Number</label>
                            <input type="text" id="contact" name="contact" value="09123456789" readonly>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" name="address" value="Barangay Lunao, Gingoog City" readonly>
                    </div>
                    
                </div>
                
            </div>

            <!-- Editing Profile -->
            <div class="edit-profile-card hidden">
                <!-- <h4>Edit Profile</h4> -->
                 
                <form action="/update-profile" method="POST">

                    <div class="top-profile">
                        <div class="profile-image">
                            <img src="/image/olivia-rodrigo.jpg" alt="">
                        </div>
                        
                        <div>
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <button type="button" class="btn btn-danger" onclick="toggleEditProfile()">Cancel</button>
                        </div>
                    </div>
                    
                    <div class="info-profile">
                        <div class="form-group-row">
                            <div class="form-group">
                                <label for="firstname">First Name</label>
                                <input type="text" id="firstname" name="firstname" value="Olivia" required>
                            </div>
                            <div class="form-group">
                                <label for="lastname">Last Name</label>
                                <input type="text" id="lastname" name="lastname" value="Rodrigo" required>
                            </div>
                        </div>
                        
                        <div class="form-group-row">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" value="olivia@example.com" readonly>
                            </div>
                            <div class="form-group">
                                <label for="contact">Contact Number</label>
                                <input type="text" id="contact" name="contact" value="09123456789" readonly>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" id="address" name="address" value="Barangay Lunao, Gingoog City" readonly>
                        </div>
                        
                    </div>
                    
                    
                </form>
            </div>
        </section>
    </main>

    <script>
        function toggleEditProfile() {
            document.querySelector('.view-profile-card').classList.toggle('hidden');
            document.querySelector('.edit-profile-card').classList.toggle('hidden');
        }
    </script>

</body>

</html>
