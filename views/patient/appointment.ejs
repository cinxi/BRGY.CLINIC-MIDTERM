<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>
    <!-- Linking Google Font Link For Icons --> 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/patient/appointment.css"> <!-- Link to your logs.css -->
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/olivia-rodrigo.jpg" alt="profile-img">
                <div class="user-detail">
                    <h3>Olivia Rodrigo</h3>
                    <span>Patient</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/brgy-logo.png" alt="logo">
            <h3>Brgy. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <div class="menu-separator"></div>

            <li><a href="profile"><span class="material-symbols-outlined"> manage_accounts </span>Profile</a></li>
            <li><a href="appointment"><span class="material-symbols-outlined"> edit_calendar </span>Appointment</a></li>

            <li><a href="history"><span class="material-symbols-outlined">  save_clock    </span>History</a></li>
            <li><a href="login"><span class="material-symbols-outlined">logout</span>Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="sticky-header">
            <!-- <h2>Logs</h2> -->
        </div>

        <!-- Logs Table Section -->
        <section class="appointment-section">
            <div class="add-search">
                <h4>Scheduled Appointments</h4>
                <button class="btn-success" onclick="openModal()">Schedule Appointment</button>
            </div>
        
            <!-- Appointments Table -->
            <div class="table-responsive">
                <table class="appointment-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Clinic Staff</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>November 30, 2024</td>
                            <td>10:00 AM</td>
                            <td>Dr. Mori</td>
                            <td>General Checkup</td>
                        </tr>
                        <tr>
                            <td>December 5, 2024</td>
                            <td>2:00 PM</td>
                            <td>Dr. Labulabubu</td>
                            <td>Dental Cleaning</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
        
        <!-- Modal for Booking Appointment -->
        <div id="appointmentModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">&times;</span>
                <h3>Book Appointment</h3>
                <form id="appointmentForm">
                    <label for="appointmentDate">Date</label>
                    <input type="date" id="appointmentDate" required>
        
                    <label for="appointmentTime">Time</label>
                    <input type="time" id="appointmentTime" required>
        
                    <label for="doctor">Doctor</label>
                    <select id="doctor" required>
                        <option value="Dr. Smith">Dr. Smith</option>
                        <option value="Dr. Doe">Dr. Doe</option>
                    </select>
        
                    <label for="reason">Reason for Visit</label>
                    <input type="text" id="reason" placeholder="Reason" required>
        
                    <button type="submit">Book Appointment</button>
                </form>
            </div>
        </div>
        
    </main>
    <script>
        function openModal() {
            document.getElementById("appointmentModal").style.display = "block";
        }
        
        function closeModal() {
            document.getElementById("appointmentModal").style.display = "none";
        }
        
        window.onclick = function(event) {
            const modal = document.getElementById("appointmentModal");
            if (event.target === modal) {
                closeModal();
            }
        };
        </script>
        
</body>
</html>
